# Backend Production Environment Variables
# Add these in Hostinger Node.js App Manager

NODE_ENV=production
PORT=5000

# Database Configuration (Get from cPanel)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=your_cpanel_username_jmc_skincare
DB_USER=your_cpanel_username_jmc_user
DB_PASSWORD=YOUR_DATABASE_PASSWORD_HERE
DB_DIALECT=mysql

# JWT Configuration
JWT_SECRET=CHANGE_THIS_TO_RANDOM_32_CHAR_STRING_MIN
JWT_EXPIRE=7d

# Email Configuration (Gmail Example)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-gmail-app-password
EMAIL_FROM=JMC Skin Secrets <your-email@gmail.com>

# Razorpay Payment Gateway
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_secret_key

# Frontend URL
FRONTEND_URL=https://jmcskinsecrets.com

# File Upload Settings
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880

# Security & Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
CORS_ORIGIN=https://jmcskinsecrets.com

# Shiprocket (If using)
SHIPROCKET_EMAIL=
SHIPROCKET_PASSWORD=
SHIPROCKET_API_URL=https://apiv2.shiprocket.in/v1/external

# WhatsApp Notifications (Optional)
WHATSAPP_API_URL=
WHATSAPP_API_KEY=
